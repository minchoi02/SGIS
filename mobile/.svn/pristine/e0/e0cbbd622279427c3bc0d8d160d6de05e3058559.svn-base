/* 20220831 배천규 추가  */
.nav-2022 { width:100%; position:relative; overflow:hidden; padding:5px 10px; box-sizing:border-box; display:flex; justify-content:space-between; background-color:#f7f7f7; border-bottom:1px solid #757678;}
.nav-2022 div span { display:flex; justify-content:space-between; align-items:center; box-sizing:border-box; padding:5px 10px; font-size:13px; color:#4F4F4F; border:1px solid #E0E0E0; background-color:#fff; border-radius:1px; float:left; margin-left:5px; height:30px;}
.nav-2022 div span:first-child { margin-left:0px;}
.nav-2022 div span svg { fill:#4F4F4F; margin-left:5px; transform: rotate(180deg);}
.nav-2022 div span.active { border:1px solid #2277F2; color:#2277F2;}
.nav-2022 div span.active svg { fill:#2277F2; transform: rotate(00deg);}


.nav-2022 div.rightCol { display:flex; justify-content:space-between;}
.nav-2022 div.rightCol .listTitle { font-size:13px; background-color:#fff; border:1px solid #E0E0E0; box-sizing:border-box;padding:5px 10px; display:flex; align-items:center;}
.nav-2022 div.rightCol .listTitle span { border:none; height:auto; background-color:#fff; padding:0; margin:0;}
.nav-2022 div.rightCol .listTitle span:last-child { margin-left:5px;}

.nav-2022 div.rightCol div {  font-size:13px; background-color:#fff; border:1px solid #E0E0E0; box-sizing:border-box;padding:5px 10px; height:30px;}
.nav-2022 div.rightCol div:last-child { margin-left:5px;}

.nav-layer { position:absolute; z-index:990; left:10px; top:105px; background-color:#fff; width:120px; border:1px solid #757678; display:none;   } /* 2022-10-20 css 수정 */
.nav-layer ul { padding:0; margin:0; }
.nav-layer li { width:100%; float:left; text-align:left; box-sizing:border-box; padding:5px 10px; color:#3D3D3D; font-size:13px; }
.nav-layer li a { color:#3d3d3d; }
.nav-layer li.on3 { background-color:#F2F2F2; color:#2277F2;}

.swiper-container { border-top:3px solid #112B48; background-color:#fff; box-sizing:border-box; padding:10px; }

