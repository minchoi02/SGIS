.header {
  border-bottom: 1px solid #e5e5e5;
  min-width: 1200px;
  overflow: hidden;
  padding: 0 10px;

  .inner {
    position: relative;
    width: 1200px;
    margin: 0 auto;
    overflow: hidden;
    height: 90px;
  }

  .logo {
    position: absolute;
    top: 20px;
    left: 0;

    h1 {
      font-size: 30px;
      color: #213969;
      font-weight: 800;
    }

    span {
      font-size: 15px;
      color: #213969;
    }
  }

  .gnb {
    position: absolute;
    top: 50px;
    right: 0;

    ul {
      font-size: 0;
    }

    li {
      display: inline-block;
      vertical-align: top;

      &:last-child {
        a {
          padding-right: 0;
        }
      }
    }

    a {
      font-size: 18px;
      color: #000;
      text-align: center;
      display: inline-block;
      font-weight: 700;
      text-decoration: none;
      outline: none;
      padding: 0 20px;
    }
  }

  .util {
    position: absolute;
    top: 10px;
    right: 0;
    font-size: 0;

    div {
      display: inline-block;
      vertical-align: top;
      border: 1px solid #e5e5e5;
      box-sizing: border-box;
      font-size: 12px;
      text-align: center;
      padding: 0 15px;
      height: 25px;
      line-height: 25px;
      margin-right: 10px;

      em {
        font-weight: 700;
      }
    }

    button {
      display: inline-block;
      vertical-align: top;
      width: 90px;
    }
  }
}
