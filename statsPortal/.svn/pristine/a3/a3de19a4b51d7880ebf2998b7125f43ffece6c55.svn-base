@charset "utf-8";


.wrap {width: 800px; margin: 0 auto; box-sizing: border-box; }

/*tit*/
h1 {background: url(../images/notice.png) center; width: 100%; height: 508px;}

/*.quizBox*/
.Box {padding: 0 80px; letter-spacing: -1px; background: url(../images/bg.png) no-repeat; margin-top: 60px;}

/*quiz*/
.tit {margin-bottom: 20px; color: #3165db; display: flex; justify-content: space-between;}
.tit01 {font-size: 20px; font-weight: 600; margin-left: 37px; position: relative;}
.tit01::before {content: ""; position: absolute; width: 35px; height: 42px; background: url(../images/icon_m.png) no-repeat ; left: -37px; top: -12px;}
.tit_btn {width: 150px; height: 34px; font-size: 15px; border: 1px solid #3165db; border-radius: 17px; letter-spacing: -1px; color: #3165db; }
.tit_btn:hover {background: #3165db; color: #fff;}
.cont01 {margin-bottom: 30px;}
.screen {margin-bottom: 15px;}
.txtbox {font-size: 13px; width: 100%; background: #ebf1ff; padding: 30px 45px; border-top: 2px solid #3165db; line-height: 1.8;}
.txtbox .bl_b {font-weight: 600; color: #3165db; }
.txtbox .bk_b {font-weight: 600; color: #000000; }
.green {color: #62bd4e;}
.quizbox {padding: 0 10px; margin-bottom: 50px;}
.quiz {font-size: 16px; margin-bottom: 15px; font-weight: bold; }
.quizList {text-align: center; margin-bottom: 36px;}
.quizList th {background: #fff6e5; padding: 8px; font-size: 14px; border-top: 1px solid #acacac;}
.quizList td {font-size: 13px; padding: 10px; border-top: 1px solid #acacac; border-bottom: 1px solid #acacac;}
.quizList td button { border: 1px solid #737373; width: 20px; height: 20px; border-radius: 50%;}
.quizList td button.on {background: #3165db; color: #fff;}
textarea {width: 100%;}

.psnBox {padding: 0 100px; margin-bottom: 50px;}
.txt{font-size: 14px; margin-bottom: 20px; }
.psnTable {font-size: 14px; text-align: left;}
.psnTable th {background: #fff6e5; padding: 8px; border-top: 1px solid #acacac; border-bottom: 1px solid #acacac; }
.psnTable td {padding: 10px; border-top: 1px solid #acacac; border-bottom: 1px solid #acacac;}


.btn{width: 150px; height: 34px; font-size: 15px; border-radius: 17px; letter-spacing: -1px; background:#3165db; color:#fff; margin-left: 220px; margin-top:50px;}
