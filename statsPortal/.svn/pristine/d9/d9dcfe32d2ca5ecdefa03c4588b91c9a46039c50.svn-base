@import url(common.css);


.wrap {
    width: 700px;
    margin: 0 auto;
    box-sizing: border-box;
}

/*tit*/
.tit {
    background: url(../img/bg.png) center;
    width: 100%;
    height: 210px;
    color: #fff;
}

/*quizBox*/
.quizBox {
    padding: 30px 50px;
    box-sizing: border-box;
}

.quizList {
    margin-bottom: 40px;
    /*    border: 1px solid red;*/
}

.quizList .quiz {
    margin-bottom: 12px;
    font-size: 14px;
}

.quiz .no {
    color: #ec0f3c;
    font-weight: 600;
    margin-right: 5px;
}

span.parenthesis {
    font-weight: lighter;
    font-size: 12px;
    color: #000;
    opacity: .7;
}

.row::after {
    content: "";
    display: block;
    clear: both;
}

.answerList {
    float: left;
    box-sizing: border-box;
    width: 46%;
    font-size: 12px;
    margin-bottom: 6px;
    margin-right: 10px;
}

.answerList button, table button{
    font-size: 12px;
    border: 1px solid #737373;
/*    box-sizing: border-box;*/
    width: 20px;
    height: 20px;
    border-radius: 50%;
    margin-right: 5px;
    line-height: 1;
    letter-spacing: -1px;
}

.answerList button.on {
    background: red;
    color: #fff;
    border: 1px solid red;
}

.redspan {
    color: red;
}

.anFull {
    width: 90%;
}

.answerList input {
    margin-left: 5px;
    font-size: 12px;
    padding: 1px 5px;
    box-sizing: border-box;
    width: 200px;
}

.quizTit {
    color: #575757;
    font-weight: bold;
    margin-bottom: 20px;
    font-size: 20px;
}

.quizTit span {
    color: #ec0f3c;
}

.satisfy {
    width: 100%;
    text-align: center;
    border-bottom: 1px solid #cacaca;
}

.satisfy tbody th {
    border-right: 1px solid #fff;
}

.satisfy tbody td {
    border-right: 1px solid #cacaca;
}

.satisfy tbody td:last-child {
    border-right: 0;
}

textarea {
    width: 580px;
    height: 70px;
    padding: 5px;
    box-sizing: border-box;
}

table tr {
    font-size: 12px;
    height: 38px;
    border-top: 1px solid #cacaca;
    border-bottom: 1px solid #cacaca;
}

table th {
    background: #f794a8;
    text-align: center;
    font-weight: normal;
    color: #fff;
}

table td {
    padding-left: 5px;
}

table input[type="text"] {
    width: 400px;
    border: 1px solid #fff;
    padding: 2px 5px;
}

table input[type="radio"] {
    margin-right: 5px;
    margin-left: 10px;
}

table input.etc[type="text"] {
    width: 110px;
    border: 1px solid #cacaca;
    padding: 2px 5px;
    margin-left: 5px;
}

table select {
    width: 145px;
    border: 1px solid #cacaca;
    padding: 2px 5px;
    margin: 0 5px;
    box-sizing: border-box;
}

#srv6 button.on{
    background: red;
    color: #fff;
    border: 1px solid red;
}